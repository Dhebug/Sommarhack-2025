{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format

    // https://code.visualstudio.com/Docs/editor/tasks
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "type": "shell",
            "command": "build.bat",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "reveal": "always",
                "panel": "dedicated",
                "clear": true,          // Should the terminal content be cleared when starting the task
                "close": false          // Should the terminal be closed after building?
            }
        }
    ]
}
  